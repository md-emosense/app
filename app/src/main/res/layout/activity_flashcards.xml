<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="view.flashcards.FlashcardsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/headerCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins"
                android:text="Flashcards"
                android:textColor="@color/primary"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Flashcard 1: Senang -->
            <RelativeLayout
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:tag="front">

                <RelativeLayout
                    android:id="@+id/cardFront1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senang"
                        android:textSize="24sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/poppins"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cardBack1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/playSenang"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/baseline_play_circle_24"
                        android:layout_centerInParent="true"
                        android:rotationY="180"/>

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btnFlip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/baseline_flip_24"
                    android:contentDescription="Flip Card" />
            </RelativeLayout>

            <!-- Flashcard 1: Sedih -->
            <RelativeLayout
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:tag="front">

                <RelativeLayout
                    android:id="@+id/cardFront2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sedih"
                        android:textSize="24sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/poppins"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cardBack2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/playSedih"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/baseline_play_circle_24"
                        android:layout_centerInParent="true"
                        android:rotationY="180"/>

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btnFlip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/baseline_flip_24"
                    android:contentDescription="Flip Card" />
            </RelativeLayout>

            <!-- Flashcard 3: Marah -->
            <RelativeLayout
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:tag="front">

                <RelativeLayout
                    android:id="@+id/cardFront3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marah"
                        android:textSize="24sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/poppins"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cardBack3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/playMarah"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/baseline_play_circle_24"
                        android:layout_centerInParent="true"
                        android:rotationY="180"/>

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btnFlip3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/baseline_flip_24"
                    android:contentDescription="Flip Card" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
