<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emosense.MainActivity">
    <ScrollView
        android:id="@+id/rsf1pk02okgd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="21dp"
        android:fillViewport="true"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="23dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/logoTemp"
                    android:textColor="#FF9800"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="[LOGO]"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/profileButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/welcomeText"
                android:textColor="#FF9800"
                android:textSize="24sp"
                android:layout_marginBottom="17dp"
                android:layout_marginStart="24dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Selamat Datang, Aisha!"
                />
            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="22dp"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars"
                />
            <TextView
                android:id="@+id/articleSection"
                android:textColor="#FF9800"
                android:textSize="24sp"
                android:layout_marginBottom="17dp"
                android:layout_marginStart="24dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Berita"
                />
            <LinearLayout
                android:id="@+id/article1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="22dp"
                android:elevation="4dp"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/article1Poster"
                    android:layout_width="103dp"
                    android:layout_height="103dp"
                    tools:srcCompat="@tools:sample/avatars"
                    android:scaleType="fitXY"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/article1Text"
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/article1Title"
                        android:textColor="#030303"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Maraknya Kasus Autism"
                        />
                    <TextView
                        android:id="@+id/article1Desc"
                        android:textColor="#030303"
                        android:textSize="12sp"
                        android:layout_marginBottom="14dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Menurut data yang disampaikan oleh WHO, terdapat lebih dari 1000 bayi autis yang lahir setiap tahunnya dalam 5 tahun terakhir di I..."
                        />
                    <LinearLayout
                        android:id="@+id/detailButton1"
                        android:layout_width="71dp"
                        android:layout_height="28dp"
                        android:gravity="center_horizontal"
                        android:paddingVertical="9dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/detailButtonText1"
                            android:textColor="#F8F8FF"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Detail"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/article2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="22dp"
                android:elevation="4dp"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/article2Poster"
                    android:layout_width="103dp"
                    android:layout_height="103dp"
                    tools:srcCompat="@tools:sample/avatars"
                    android:scaleType="fitXY"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/articleLayout2"
                    android:layout_width="247dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/articleTitle2"
                        android:textColor="#030303"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Pentingnya Emosional Anak Autis"
                        />
                    <TextView
                        android:id="@+id/rxbik0kiujoj"
                        android:textColor="#030303"
                        android:textSize="12sp"
                        android:layout_marginBottom="14dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Penyakit autis memiliki beberapa gejala yang berkaitan langsung dengan kesehatan mental anak, antara lain adalah kurangnya..."
                        />
                    <LinearLayout
                        android:id="@+id/rgug36knhz3k"
                        android:layout_width="71dp"
                        android:layout_height="28dp"
                        android:gravity="center_horizontal"
                        android:paddingVertical="9dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rygb2a2jny0m"
                            android:textColor="#F8F8FF"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Detail"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
